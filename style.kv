#:import utils kivy.utils


<Button>:
    font_name: 'SF-Pro-Display-Regular.otf'
    color: utils.get_color_from_hex('#DDDDDD')
    background_color: 0, 0, 0, 0


<HomePage>:
    
    BoxLayout:
        Button:
            text: 'tap to start'
            font_size: 0.1 * self.height
            on_release:
                root.manager.current = "timer"
            
            
<TimerPage>:
    BoxLayout:
        orientation: 'vertical'
        
        Button:
            id: start_stop_button
            text: '00:00'
            color: utils.get_color_from_hex('#555555')
            font_size: 0.15 * self.height
            size_hint_y: .8
            on_release:
                root.start_stop()
                print('debug: clicked start_stop_button')

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2

            Button:
                id: reset_button
                text: 'reset'
                color: utils.get_color_from_hex('#555555')
                font_size: 0.2 * self.height
                opacity: 0
                on_release:
                    root.reset_elapsed_time()
                    print('debug: clicked reset_button')
            
                