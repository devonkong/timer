<HomePage>:
    BoxLayout:
        Button:
            text: 'tap to start'
            font_size: 0.1 * self.height
            background_color: [0, 0, 0, 1]
            on_release:
                root.manager.current = "timer"
            
            
<TimerPage>:
    BoxLayout:
        orientation: 'vertical'
        
        Button:
            id: timer_button
            text: '00:00'
            font_size: 0.1 * self.height
            size_hint_y: .8
            background_color: [0, 0, 0, 1]
            on_release:
                root.timer_button()
                print('timerbutton')

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2

            Button:
                id: reset_button
                text: 'reset'
                font_size: 0.2 * self.height
                background_color: [0, 0, 0, 1]
                opacity: 0
                on_release:
                    root.reset_elapsed_time()
                    print('resetbutton')
            
                