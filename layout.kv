<Button>:
    background_color: [0, 0, 0, 1]


<HomePage>:
    BoxLayout:
        Button:
            text: 'tap to start'
            font_size: 0.1 * self.height
            on_release:
                root.manager.current = "timer"
            
            
<TimerPage>:
    BoxLayout:
        orientation: 'vertical'
        
        Button:
            id: start_stop_button
            text: '00:00'
            font_size: 0.1 * self.height
            size_hint_y: .8
            on_release:
                root.start_stop()
                print('debug: clicked start_stop_button')

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2

            Button:
                id: reset_button
                text: 'reset'
                font_size: 0.2 * self.height
                opacity: 0
                on_release:
                    root.reset_elapsed_time()
                    print('debug: clicked reset_button')
            
                